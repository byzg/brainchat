!!!
%html
  %head
    %title BrainChat
    = stylesheet_link_tag    'application', :media => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    = hidden_field_tag 'locale', I18n.locale
    - if current_user
      - if session[:current_user_account_password]
        #current_user_account_password{style: "display: none"}
      .navbar.navbar-static-top.navbar-inverse
        .navbar-inner
          .container
            = link_to t('.brand'), root_path, class: 'brand'
            #menu
              %ul.nav
                -#%li= link_to 'Кнопка-ссылка', "#"
                %li.divider-vertical
                %li.dropdown
                  %a.dropdown-toggle{href: '#',:'data-toggle' => 'dropdown'}
                    = t('.menu.chats.title')
                    %b.caret
                  %ul.dropdown-menu
                    - if current_user.have_friends?
                      %li= link_to_modal t('.menu.chats.new'), new_chat_path
                    %li= link_to t('list'), chats_path
                %li.dropdown
                  %a.dropdown-toggle{href: '#',:'data-toggle' => 'dropdown'}
                    = t('.menu.friedns.title')
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to t('list'), user_friend_assignments_path
                    %li= link_to_modal t('submit.add'), new_user_friend_assignment_path
                    %li= link_to_modal t('submit.create'), new_user_path
                -#%li
                -#  %form.navbar-form.pull-left
                -#    %input.span2{type: "text", placeholder: t('.menu.search.placeholder')}/
                -#    %button.btn{type: "submit"} Отправить
            %ul.nav.pull-right
              %li.dropdown
                %a.dropdown-toggle{href: '#',:'data-toggle' => 'dropdown'}
                  = current_user.email
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to t('edit'), "#"
                  %li.divider
                  %li= link_to t('.menu.account.logout'), destroy_user_session_path, method: 'delete'
    .container-fluid
      .row-fluid
        .messages= bootstrap_flash
      .row-fluid
        .span12= yield

