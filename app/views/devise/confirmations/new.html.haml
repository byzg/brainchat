  -if !(resource.errors.empty?)
    .alert.alert-block
      %button.close{"data-dismiss" => "alert", type: "button"} Ã—
      = devise_error_messages!
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div= f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions'), class: 'btn btn-info'
= render "devise/shared/links"
