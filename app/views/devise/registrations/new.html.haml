%h2= t('.sign_up', :default => "Sign up")
= simple_form_for(resource, :url => registration_path(resource_name)) do |f|
  -if !(resource.errors.empty?)
    .alert.alert-block
      %button.close{"data-dismiss" => "alert", type: "button"} Ã—
      = devise_error_messages!
  = f.input :name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  = f.submit t('.sign_up', :default => "Sign up"), class: 'btn btn-success'
= render "devise/shared/links"
